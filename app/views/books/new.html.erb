<div class="content_wrapper">
  <div class="header_wrapper">
    <div class="page_header">
      <h1>Новая книга</h1>
    </div>
  </div>
  <div class="page_wrapper">
    <div class="page_content">
      <div class="form_wrapper">
        <% if @book.errors.any? %>
          <div class="error_explanation">
            <i class="material-icons">error_outline</i>
            <h2>Ошибки:</h2>
            <ul>
              <% @book.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for @book do |f| %>
          <div class="form_item">
            <div class="label_item"><%= f.label :title %></div>
            <div class="input_item"><%= f.text_field :title %></div>
          </div>
          <div class="form_item">
            <div class="label_item"><%= f.label :author %></div>
            <div class="input_item"><%= f.text_field :author %></div>
          </div>
          <div class="form_item">
            <div class="label_item"><%= f.label :attached_file %></div>
            <div class="input_item"><%= f.file_field :attached_file %></div>
          </div>
          <div class="form_item actions">
            <div class="input_item"><%= f.submit %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
